<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- 数据库环境配置 可以配置 N 个环境-->
	<environments default="development">
		<environment id="development">
			<!-- 事务管理配置  jdbc -->
			<transactionManager type="JDBC" />
			<!-- 连接参数   type="POOLED" 基于连接池 -->
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3307/damai-demo?useOldAliasMetadataBehavior=true" />
				<property name="username" value="root" />
				<property name="password" value="ycsw" />
			</dataSource>
		</environment>
		
		<environment id="test">
			<!-- 事务管理配置  jdbc -->
			<transactionManager type="JDBC" />
			<!-- 连接参数   type="POOLED" 基于连接池 -->
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://127.0.0.1/demo-damai" />
				<property name="username" value="root" />
				<property name="password" value="a" />
			</dataSource>
		</environment>
		
		<environment id="product">
			<!-- 事务管理配置  jdbc -->
			<transactionManager type="JDBC" />
			<!-- 连接参数   type="POOLED" 基于连接池 -->
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://127.0.0.1/demo-damai" />
				<property name="username" value="root" />
				<property name="password" value="a" />
			</dataSource>
		</environment>
		
	</environments>
	
	<!-- 映射文件配置-->
	<mappers>
		<mapper resource="com/yc/damai/dao/ProductMapper.xml" />
		<mapper resource="com/yc/damai/dao/CategoryMapper.xml" />
	</mappers>
</configuration>